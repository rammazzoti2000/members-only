<p id="notice"><%= notice %></p>
<div class="posts-table">
  <% if current_user %>
    <div class="user_hello">
      <%= link_to 'Sign-out', destroy_user_session_path, method: :delete %>
      <h4>Hello! <%=current_user.name %></h4>
    </div>
  <% else %>
    <div class="but-wrapper">
      <%= link_to 'Sign-in', new_user_session_path %>
      <%= link_to 'Sign-up', new_user_registration_path %>
    </div>
  <% end %>

  <div class="main-table">
    <h1>Posts</h1>
    <table>
      <thead>
        <tr class="header-body">
          <th class="th-1 table-header">Post</th>
          <th class="th-2 table-header">User</th>
        </tr>
      </thead>

      <tbody class="tbody">
        <% @posts.each do |post| %>
          <tr class="header-body">
            <td class="column-post-user">
              <%= post.post %>
              <hr>
            </td>

            <% if user_signed_in? %>
              <td class="column-post-user">
                <%= post.user.name %>
                <hr>
              </td>
            <% end %>

          </tr>
        <% end %>
      </tbody>

    </table>

    <br>

  <%= link_to 'New Post', new_post_path, class:"new-post" %>

  </div>
</div>